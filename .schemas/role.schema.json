{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "YAML schema for GitHub Identity Provider roles",
  "type": "object",
  "additionalProperties": false,
  "unevaluatedProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "repositories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "matcher": {
      "type": "string"
    },
    "branches": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "default": []
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "default": []
    },
    "environments": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "default": []
    },
    "statements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/statement"
      }
    }
  },
  "required": [
    "name",
    "repositories",
    "matcher",
    "statements"
  ],
  "$defs": {
    "condition": {
      "type": "object",
      "additionalProperties": false,
      "unevaluatedProperties": false,
      "properties": {
        "matcher": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "variable": {
          "type": "string"
        }
      },
      "required": [
        "matcher",
        "values",
        "variable"
      ]
    },
    "statement": {
      "type": "object",
      "additionalProperties": false,
      "unevaluatedProperties": false,
      "properties": {
        "sid": {
          "type": "string"
        },
        "effect": {
          "type": "string",
          "enum": [
            "Allow",
            "Deny"
          ]
        },
        "actions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+:[A-Za-z0-9*]+$"
          }
        },
        "resources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/condition"
          },
          "minItems": 0,
          "default": []
        }
      },
      "required": [
        "sid",
        "effect",
        "actions",
        "resources"
      ]
    }
  }
}
